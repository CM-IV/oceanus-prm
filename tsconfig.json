{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/pages/api/*"],
      "@utils/*": ["src/utils/*"],
      "@prisma/*": ["prisma/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true,
    "types": [
      "astro/client",
      "lucia-auth"
    ]
  }
}